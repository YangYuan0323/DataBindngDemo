<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="presenter"
            type="com.databindngdemo.main.MainActivity.Presenter"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{presenter.onClickSimpleDemo}"
            android:text="@{@string/demo_simple}"
            android:textColor="@{@color/textColorDay}"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{presenter.onClickListActivity}"
            android:text="@{@string/demo_list}"
            android:textColor="@{@color/textColorDay}"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{presenter.onClickTwoWayActivity}"
            android:text="@{@string/demo_inverse}"
            android:textColor="@{@color/textColorDay}"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{presenter.onClickExpressionActivity}"
            android:text="@{@string/demo_expression}"
            android:textColor="@{@color/textColorDay}"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{presenter.onClickAnimationActivity}"
            android:text="@{@string/demo_animation}"
            android:textColor="@{@color/textColorDay}"/>

    </LinearLayout>
</layout>